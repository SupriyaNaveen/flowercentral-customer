<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_help_outer_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flowercentral.flowercentralcustomer.deliveryTime.DeliveryTime">

    <!-- Set toolbar -->
    <include
        android:id="@+id/toolbar_default"
        layout="@layout/toolbar_default" />

    <RelativeLayout
        android:id="@+id/ll_help_inner_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_default">

        <TextView
            android:id="@+id/help_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/title_help"
            android:textSize="20sp"/>

        <ExpandableListView
            android:id="@+id/help_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/help_title"
            android:layout_marginTop="@dimen/dp5" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
