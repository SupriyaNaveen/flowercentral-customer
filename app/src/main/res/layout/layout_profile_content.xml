<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                app:contentPadding="@dimen/dp10"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="@dimen/cardview_default_elavation"
                app:cardCornerRadius="@dimen/cardview_default_corner_radius"
                app:cardBackgroundColor="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_email"
                            android:layout_marginBottom="@dimen/dp2"
                            style="@style/AppTheme.Normal"/>

                        <TextView
                            android:id="@+id/txt_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ashishupadhyay76@gmail.com"
                            android:background="@drawable/rounded_corner_border_grey"
                            android:layout_marginBottom="@dimen/dp2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Must enter name"
                            android:layout_marginBottom="@dimen/dp2"
                            android:visibility="gone"
                            style="@style/AppTheme.Error"/>

                    </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                app:contentPadding="@dimen/dp10"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="@dimen/cardview_default_elavation"
                app:cardCornerRadius="@dimen/cardview_default_corner_radius"
                app:cardBackgroundColor="@color/colorWhite">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_first_name"
                            android:layout_marginBottom="@dimen/dp2"
                            style="@style/AppTheme.Normal"/>

                        <EditText
                            android:id="@+id/edt_user_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_border_grey"
                            android:layout_marginBottom="@dimen/dp2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Must enter name"
                            android:layout_marginBottom="@dimen/dp2"
                            android:visibility="gone"
                            style="@style/AppTheme.Error"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_last_name"
                            android:layout_marginBottom="@dimen/dp2"
                            style="@style/AppTheme.Normal"/>

                        <EditText
                            android:id="@+id/edt_user_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_border_grey"
                            android:layout_marginBottom="@dimen/dp2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Must enter name"
                            android:layout_marginBottom="@dimen/dp2"
                            android:visibility="gone"
                            style="@style/AppTheme.Error"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                app:contentPadding="@dimen/dp10"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="@dimen/cardview_default_elavation"
                app:cardCornerRadius="@dimen/cardview_default_corner_radius"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_mobile"
                            android:layout_marginBottom="@dimen/dp2"
                            style="@style/AppTheme.Normal"/>

                        <EditText
                            android:id="@+id/edt_user_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_border_grey"
                            android:layout_marginBottom="@dimen/dp2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Must enter name"
                            android:layout_marginBottom="@dimen/dp2"
                            android:visibility="gone"
                            style="@style/AppTheme.Error"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_gender"
                            android:layout_marginBottom="@dimen/dp2"
                            style="@style/AppTheme.Normal"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_male"
                                android:layout_marginRight="@dimen/dp10"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_female"
                                android:layout_marginLeft="@dimen/dp10"/>

                        </RadioGroup>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

</LinearLayout>