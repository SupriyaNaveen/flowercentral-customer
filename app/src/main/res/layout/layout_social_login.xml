<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/AppTheme.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/lbl_lets_connect"
        android:textColor="@color/colorSecondaryText"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/wrapper_social_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.andexert.library.RippleView
            android:id="@+id/btn_fb"
            rv_centered="true"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_margin="@dimen/dp10">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_facebook_grey" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/btn_google"
            rv_centered="true"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_margin="@dimen/dp10">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_google_plus_grey" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/btn_instagram"
            rv_centered="true"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_margin="@dimen/dp10">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_pinterest_grey" />
        </com.andexert.library.RippleView>

    </LinearLayout>

</LinearLayout>